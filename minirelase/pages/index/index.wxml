<button class="access" wx:if="{{!access}}" open-type='getUserInfo' bindgetuserinfo="bindGetUserInfo"></button>
<view class="laybg {{lay?'lay':''}}" wx:if="{{searchOpen || lay}}" bindtap="closelay"></view>



<view class='header-search'>
        <view class="tit">莘庄</view>
        <input type='text' class='search-input' placeholder='搜索职位/公司'></input>
        <view class="search icon-linedesign-12"></view>
        <view class="scan">
          <view class=' icon-richscan_icon' bindtap="scan"></view>
          <view class='scanword'>扫一扫</view>
        </view>
</view>
