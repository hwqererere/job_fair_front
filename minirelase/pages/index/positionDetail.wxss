/* pages/index/positionDetail.wxss */
.container {
  background: #fff;position:fixed;left:0rpx;top:0rpx;width:100%;height:calc(100% - 100rpx);
}

.position-group {
  margin-bottom: 20rpx;
  background: #fff;
  padding-top: 40rpx;
  width: 100%;
}

.position-main {
  padding: 0 20rpx;
}

.position-hd {
  position: relative;
  /* padding-left: 120rpx; */
  border-bottom: #f6f6f6 solid 1px;
  padding-bottom: 20rpx;
}

.position-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 105rpx;
  height: 105rpx;
}

.position-hd .position-img image {
  width: 100%;
  height: 100%;
}
.position-img {position:absolute;left:0;top:0;width:105rpx;height:105rpx;background-color:#357ac0;border-radius: 52rpx;}
.position-hd .position-img image {width:100%;height:100%;color:#fff}
.position-hd .position-img view{float:left;width:100%;font-size:30rpx;color:#fff;text-align: center;}
.position-hd .position-img view:nth-child(1){margin-top:10rpx}
.position-hd .position-item {
  position: relative;
}

.position-hd .position-item .price {
  position: absolute;
  right: 10rpx;
  top: 0rpx;
  color: #ff5632;
  font-size: 32rpx;
}

.position-hd .position-item .title {
  color: #000;
  font-size: 32rpx;
  height: 36rpx;
  line-height: 36rpx;
}

.position-hd .position-item .name {
  color: #bababa;
  font-size: 26rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 15rpx 0;
}

.position-hd .position-item .label {
  vertical-align: top;
  letter-spacing: normal;
  font-size: 0;
  letter-spacing: -5rpx;
}

.position-hd .position-item .label .box {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
  display: inline-block;
  letter-spacing: 0;
}

.position-hd .position-item .label .box.bg1 {
  background: #e1f3fe;
  color: #79bea2;
}

.position-hd .position-item .label .box.bg2 {
  background: #f7ece9;
  color: #ee9a84;
}

.position-bd {
  height: 40rpx;
  line-height: 40rpx;
  padding: 30rpx 0;
}

.position-bd .img {
  width: 51rpx;
  height: 51rpx;
  display: block;
  float: left;
}

.position-bd text {
  color: #303030;
  font-size: 28rpx;
}

.position-bd text.time {
  color: #9d9d9d;
  font-size: 24rpx;
  float: right;
  margin-top: 2rpx;
}

.position-tab {
  width: 100%;
  height: 100rpx;
  border-bottom: #c7c7c7 solid 1px;
}

.position-tab-item {
  width: 33.33%;
  height: 100rpx;
  text-align: center;
  background: #fff;
  line-height: 100rpx;
  display: block;
  float: left;
  font-size: 30rpx;
}

.position-tab-item.current {
  border-bottom: #171717 solid 1px;
}

.position-tab-content {
  background: #fff;
  width: 100%;
}

.position-tab-title {
  padding: 0 30rpx;width:100%;font-size:32rpx;
  border-bottom: #e4e4e4 solid 1px;
  height: 100rpx;
  line-height: 100rpx;float:left;
}



.position-tab-title .img {
  width: 56rpx;
  height: 56rpx;
  display: block;
  float: left;
  margin-top: 24rpx;
  margin-right: 20rpx;
}

.position-tab-title text {
  font-size: 32rpx;
}

.position-tab-main {
  padding: 20rpx 30rpx;float:left;
}

.position-tab-main text {
  line-height: 44rpx;
  font-size: 30rpx;
  color: #4f4f4f;
}
.grayline{float:left;width:100%;float:left;height:30rpx;background-color:#f8f8fa}
.position-tab-map {
  padding-top: 20rpx;
}

#myMap {
  width: 100%;
  height: 500rpx;
  position: relative;
  z-index: 100;
}

.salary-box {
  background: #fff;
  width: 100%;
}

.salary-main {
  line-height: 100rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 20rpx;
}

.salary-main text {
  color: #ff5d2e;
}

.company-box {
  background: #fff;
  width: 100%;
}

.company-logo {
  padding: 30rpx 0;
  text-align: center;
}

.company-logo .img {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  border: #f5f5f5 solid 4px;
  padding: 10rpx;
}

.company-logo .img image {
  width: 100%;
  height: 100%;
}

.company-name {
  text-align: center;float:left;width:100%;text-align:center;
  line-height: 50rpx;font-size:40rpx;padding-top:30rpx;
  color: #000;
}

.company-info {
  margin: 0 20rpx;
  margin-top: 20rpx;float:left;
  border-bottom: #e4e4e4 solid 1px;
  padding: 30rpx 0;
  font-size:30rpx;
  vertical-align: top;
}

.company-info .item {
  width: 50%;
  letter-spacing: 0;
  display: inline-block;
  font-size: 36rpx;
  text-align: center;
}

.company-info .item.border {
  border-right: #e4e4e4 solid 1px;
  margin-left: -1px;
}

.company-info .item text {
  display: block;
  font-size: 32rpx;
  color: #515151;
  line-height: 46rpx;
}


.H20 {
  height: 10rpx;
}

.foot{position:fixed;bottom:0rpx;left:0rpx;width:100%;height:100rpx;}
.foot .deli{float:left;width:60%;color:#000;font-size:40rpx;line-height:100rpx;background-color:#fff;text-align:center;background-color:#002570;color:#fff}
.foot .fav{float:left;width:40%;color:#000;background-color:#ddd;height:100rpx;line-height:100rpx;text-align:center;font-size:40rpx;}


.timelay{position: fixed;bottom:0rpx;height:100rpx;z-index:100;width:60%;background-color:#000;opacity:0.7;right:0rpx;}
.time{position:fixed;bottom:0rpx;height:100rpx;width:60%;z-index:101;color:#fff;line-height:100rpx;text-align:center;font-size:30rpx;right:0rpx}