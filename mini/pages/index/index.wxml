   <view class='header-search'>
      <view class='search-box'>
      <view class='scan icon-scan'></view>
          <input type='text' class='search-input' placeholder='搜索职位/公司'></input>
          <view class="search icon-search"></view>
          <view class="icon icon-code"></view>
          <view class="icon icon-my"></view>
      </view>
    </view>

      <view class='index-top' wx:if="{{false}}">


  </view>



  <view class='search-position'>
    <view class='search-item {{searchItem==0?"active":""}}' bindtap="searchItemChose" data-si="0">
      <view class="set">全部职位</view>
      <view class="icon {{(searchItem==0 && searchOpen)?'icon-close':'icon-open'}}"></view>
    </view>
    <view class='search-item {{searchItem==1?"active":""}}' bindtap="searchItemChose" data-si="1">
      <view class="set">筛选 </view>
     <icon class="icon {{(searchItem==1 && searchOpen)?'icon-close':'icon-open'}}"></icon>
    </view>
    <view class='all-position-box' wx:if="{{searchOpen && searchItem==0}}" >
        <view class='all-position-list'>
            <text class='{{allcounts[0][0]==0?"current":""}}'>不限</text>
            <text wx:for="{{searchitems[0][0]}}" wx:key="key00" bindtap="setitem" data-id="0-0-{{index}}" class="{{item.check==1?'current':''}}">{{item.txt}}</text>  
        </view>
        <view class='all-position-btn'>
            <view class='btn1' bindtap="reset" data-id="0">重置</view>
            <view class='btn2'>确定</view>
        </view>
    </view>
    <view class='all-position-box' wx:if="{{searchOpen && searchItem==1}}">
        <view class='all-position-list'>
            <text class='{{allcounts[1][0]==0?"current":""}}'>不限</text>
            <text wx:for="{{searchitems[1][0]}}" wx:key="key10" bindtap="setitem" data-id="1-0-{{index}}" class="{{item.check==1?'current':''}}">{{item.txt}}</text>  
        </view>
        <view class='all-position-list'>
            <text class='{{allcounts[1][1]==0?"current":""}}'>不限</text>
            <text wx:for="{{searchitems[1][1]}}" wx:key="key11" bindtap="setitem" data-id="1-1-{{index}}" class="{{item.check==1?'current':''}}">{{item.txt}}</text>  
        </view>
        <view class='all-position-btn'>
            <view class='btn1' bindtap="reset" data-id="1">重置</view>
            <view class='btn2'>确定</view>
        </view>
    </view>
    <view class='all-position-bg hide'></view>
  </view>

