<view class="container">
  <view class="resume-top">
    <view class='header-title' bindtap='backClick'>
      <icon></icon>
      <text>{{workState}}工作经验</text>
    </view>
  </view>
  <view class='form-group'>
    <label class='form-label'>工作单位*</label>
    <view class='form-item'>
      <input class='form-input'></input>
    </view>
  </view>
  <view class='form-group'>
    <label class='form-label'>起止时间*</label>
    <view class='form-item'>
      <view class='form-time'>
        <input class='form-input' bindtap='selsectdate'></input>
        <!-- <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
              <view class="weui-input">{{date}}</view>
            </picker> -->
      </view>
      <view class='form-line'>—</view>
      <view class='form-time'>
        <input class='form-input'></input>
      </view>
    </view>
  </view>
  <view class='form-group'>
    <label class='form-label'>职务*</label>
    <view class='form-item'>
      <input class='form-input' placeholder='请填写您的职务'></input>
    </view>
  </view>
  <view class='form-group'>
    <label class='form-label'>薪资</label>
    <view class='form-item'>
      <input class='form-input' placeholder='请填写您的薪资，例：5000'></input>
    </view>
  </view>
  <view class='form-save'>
    <button type='button' class='btn' bindtap='saveClick'>保存</button>
  </view>
