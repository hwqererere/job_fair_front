.resume-top {
  background: #e83743;
  width: 100%;
  height: 170rpx;
}

.personal-form-group {
  height: 90rpx;
  text-align: left;
  width: 100%;
  border-bottom: #ddd solid 1px;
}

.personal-form-group .label {
  width: 190rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  display: block;
  float: left;
  padding-left: 20rpx;
}

.personal-form-group .label image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  float: left;
  margin-top: 24rpx;
  margin-right: 15rpx;
}

.personal-form-group .label text {
  height: 40rpx;
  display: block;
  float: left;
  font-size: 30rpx;
}

.personal-form-input {
  font-size: 26rpx;
  height: 90rpx;
  line-height: 90rpx;
}
