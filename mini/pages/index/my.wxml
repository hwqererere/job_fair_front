<scroll-view scroll-y="true"  class="container">
  <view class="resume-photo">
    <view class='photo'><image bindtap="updateface" src='{{head}}'></image></view>
    <view class="nameinfo" >
      <label>{{resume.username?resume.username:'姓名'}}</label>
      <navigator class="icon-bianji" url="resumeEdit">修改</navigator>
    </view>
    <view class="icon icon-ico" bindtap="opencode"></view>
  </view>
  
  <view class="grayline"></view>
  <view class="array">
    <view class="titleline">
      <view class="dot"></view>
      <view class="title">我的投递</view>
    </view>
    <view class="list">
      <navigator url='favlist'>
        <label class="icon-icon_workfile_line"></label>
        <label>收藏</label>
      </navigator>
      <navigator url='deliverlist'>
        <label class="icon-jianli-A"></label>
        <label>投递历史</label>
      </navigator>
      <navigator  url='deliverliststat'>
        <label class="icon-icon_scan_namecard"></label>
        <label>投递状态</label>
      </navigator>
      <navigator url='deliverlistsuccess'>
        <label class="icon-icon_shakehands"></label>
        <label>有意向</label>
      </navigator>
    </view>


  </view>

</scroll-view >

<view class="laybg" wx:if="{{codelay}}" bindtap="closelay"></view>
<view class="qcodelay " wx:if="{{codelay}}">
    <canvas canvas-id="myQrcode"></canvas>

</view>
