.container {
  background: #efefef;
}

.top-pad {
  height: 320rpx;
  width: 100%;
}

.my-top {
  background: #e83743;
  width: 100%;
  height: 320rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.my-photo {
  padding: 10rpx 20rpx;
  position: fixed;
  top: 170rpx;
  left: 0;
  z-index: 1000;
}

.my-photo image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
  display: block;
  float: left;
  margin-right: 20rpx;
}

.my-photo text {
  height: 130rpx;
  line-height: 130rpx;
  color: #fff;
}

.flex-wrp {
  display: flex;
  width: 100%;
}

.flex-item {
  width: 33.33%;
  height: 180rpx;
  font-size: 26rpx;
  background: #fff;
  text-align: center;
  border-bottom: #ddd solid 1px;
}
.flex-item.border{
  border-right: #ddd solid 1px;
}

.flex-item image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
}

.flex-item text {
  height: 40rpx;
  line-height: 40rpx;
  display: block;
}
